<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/top">
            <Button
                    android:id="@+id/editReferenceScopeReturnButton"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="-5dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/return_button"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="参考范围编辑"
                    android:textColor="#f5f5f5"
                    android:textSize="24dp"
                    android:layout_marginLeft="-30dp"
                    android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="520dp"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp">
                <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:text="子项目名称:"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                <EditText
                        android:id="@+id/modifiedComponentName"
                        android:layout_width="240dp"
                        android:layout_height="match_parent"
                        android:textSize="14dp"
                        android:hint="请输入子项目名称"
                        android:textColorHint="#bebebe"
                        android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp">
                <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:text="范围最小值:"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                <EditText
                        android:id="@+id/changesInLowRange"
                        android:layout_width="240dp"
                        android:layout_height="match_parent"
                        android:textSize="14dp"
                        android:hint="请输入范围最小值"
                        android:textColorHint="#bebebe"
                        android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp">
                <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:text="范围最大值:"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                <EditText
                        android:id="@+id/modifyScopeHighValue"
                        android:layout_width="240dp"
                        android:layout_height="match_parent"
                        android:textSize="14dp"
                        android:hint="请输入范围最大值"
                        android:textColorHint="#bebebe"
                        android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp">
                <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:text="年龄最小值:"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                <EditText
                        android:id="@+id/modifyAgeMinimum"
                        android:layout_width="240dp"
                        android:layout_height="match_parent"
                        android:textSize="14dp"
                        android:hint="请输入年龄最小值"
                        android:textColorHint="#bebebe"
                        android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp">
                <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:text="年龄最大值:"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                <EditText
                        android:id="@+id/modifyAgeHighValue"
                        android:layout_width="240dp"
                        android:layout_height="match_parent"
                        android:textSize="14dp"
                        android:hint="请输入年龄最大值"
                        android:textColorHint="#bebebe"
                        android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp">
                <TextView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:text="单位:"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                <EditText
                        android:id="@+id/modifyUnit"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="40dp"
                        android:layout_height="match_parent"
                        android:textSize="14dp"
                        android:hint="RU/ml"
                        android:textColorHint="#bebebe"
                        android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp">
                <TextView
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:text="样本类型:"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                <RadioButton
                        android:id="@+id/sampleType"
                        android:layout_width="240dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="40dp"
                        android:checked="true"
                        android:text="不限制" />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp">
                <TextView
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:text="选择性别:"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                <RadioGroup
                        android:id="@+id/gender"
                        android:layout_width="240dp"
                        android:layout_height="40dp"
                        android:orientation="horizontal">
                    <RadioButton
                            android:id="@+id/male"
                            android:layout_marginLeft="10dp"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:text="男" />
                    <RadioButton
                            android:id="@+id/female"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:text="女" />
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp">
                <TextView
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:text="年龄单位:"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                <RadioButton
                        android:id="@+id/ageUnit"
                        android:layout_width="240dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="40dp"
                        android:checked="true"
                        android:text="岁" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
            <Button
                    android:id="@+id/editReferenceScopeConfirm"
                    android:layout_width="340dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button_frame_shape"
                    android:layout_marginLeft="10dp"
                    android:text="确认"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>