<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/top">
            <Button
                    android:id="@+id/editUserInfoReturnButton"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="-5dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/return_button"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="编辑个人信息"
                    android:textColor="#f5f5f5"
                    android:textSize="24dp"
                    android:layout_marginLeft="-30dp"
                    android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="520dp"
                android:orientation="vertical">
            <LinearLayout
                    android:id="@+id/photoCollection"
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp">
                <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/photograph"
                        android:layout_marginTop="5dp"/>
                <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:text="照片采集"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:gravity="center"/>
                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="180dp"
                        android:background="@drawable/folder"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp">
                <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/id_icon"
                        android:layout_marginTop="5dp"/>
                <Spinner
                        android:layout_width="280dp"
                        android:layout_height="match_parent"
                        android:entries="@array/documentType"
                        android:popupBackground="#ffffff"
                        android:background="#ffffff"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp">
                <ImageView
                        android:id="@+id/picture"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:background="@drawable/id"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
            <Button
                    android:id="@+id/editPersonalInformationConfirm"
                    android:layout_width="340dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button_frame_shape"
                    android:layout_marginLeft="10dp"
                    android:text="确认"
                    android:textColor="#C5C5C8"
                    android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>