<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

	<LinearLayout android:layout_width="match_parent" android:layout_height="match_parent">
		<ImageView android:layout_width="match_parent" android:layout_height="match_parent"/>
	</LinearLayout>
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#2e4de6"
			android:orientation="vertical">
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="240dp"
				android:orientation="vertical">
			<ImageView
					android:layout_width="138dp"
					android:layout_height="26dp"
					android:layout_marginLeft="20dp"
					android:layout_marginTop="30dp"
					android:background="@drawable/logo"/>
			<TextView
					android:layout_width="match_parent"
					android:layout_height="178dp"
					android:textSize="28dp"
					android:textColor="@color/white"
					android:text="@string/title_activity_frm_main"
					android:gravity="center"/>
		</LinearLayout>

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="400dp"
				android:layout_alignParentBottom="true"
				android:layout_marginBottom="0dp"
				android:gravity="center_horizontal"
				android:background="#ffffff"
				android:orientation="vertical">
			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="100dp"
					android:layout_marginTop="20dp"
					android:layout_marginLeft="10dp"
					android:orientation="vertical">
				<LinearLayout
						android:layout_width="300dp"
						android:layout_height="40dp"
						android:orientation="horizontal">
					<ImageView
							android:layout_width="30dp"
							android:layout_height="30dp"
							android:background="@drawable/user_name"/>
					<EditText
							android:id="@+id/userName"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:hint="请输入您的账号"
					/>
				</LinearLayout>
				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="20dp">
<!--					<TextView-->
<!--							android:layout_width="200dp"-->
<!--							android:layout_height="match_parent"-->
<!--							android:text="密码错误, 请重新输入！"-->
<!--							android:textSize="14dp"-->
<!--							android:gravity="right"-->
<!--							android:textColor="@color/red"-->
<!--							android:visibility="invisible"/>-->
				</LinearLayout>
				<LinearLayout
						android:layout_width="300dp"
						android:layout_height="40dp"
						android:orientation="horizontal">
					<ImageView
							android:layout_width="30dp"
							android:layout_height="30dp"
							android:background="@drawable/password1"/>
					<EditText
							android:id="@+id/password"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:inputType="textPassword"
							android:hint="请输入您的密码"
					/>
				</LinearLayout>
			</LinearLayout>
			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="30dp"
					android:layout_marginLeft="20dp"
					android:orientation="horizontal">
				<CheckBox
						android:id="@+id/rememberThePassword"
						android:layout_width="120dp"
						android:layout_height="match_parent"
						android:text="记住密码"
						android:textColor="@color/grey"/>
				<CheckBox
						android:id="@+id/automaticLogin"
						android:layout_width="120dp"
						android:layout_height="match_parent"
						android:text="自动登录"
						android:textColor="@color/grey"/>
			</LinearLayout>
			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="100dp"
					android:layout_marginTop="100dp"
					android:gravity="center"
					android:orientation="vertical">
				<Button
						android:id="@+id/register"
						android:layout_width="280dp"
						android:layout_height="40dp"
						android:background="@drawable/button_grey"
						android:text="注册"
						android:textColor="@color/black"
						android:textSize="20dp"/>
				<Button
						android:id="@+id/login"
						android:layout_width="280dp"
						android:layout_height="40dp"
						android:layout_marginTop="10dp"
						android:background="@drawable/button_frame_shape"
						android:text="登录"
						android:textColor="#ffffff"
						android:textSize="20dp"/>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>