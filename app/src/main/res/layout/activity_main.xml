<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

	<LinearLayout android:layout_width="match_parent" android:layout_height="match_parent">
		<ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/login"/>
	</LinearLayout>
	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			tools:ignore="MissingConstraints"
			android:orientation="vertical">
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="440dp"
				android:layout_alignParentBottom="true"
				android:layout_marginBottom="0dp"
				android:gravity="center_horizontal"
				android:background="@drawable/textview_back"
				android:orientation="vertical">
			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="50dp">
				<TextView
						android:layout_width="match_parent"
						android:layout_height="50dp"
						android:text="手持式荧光免疫分析仪"
						android:textSize="24dp"
						android:textColor="#DFDCDC"
						android:gravity="center"
						/>
			</LinearLayout>
			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="160dp"
					android:layout_marginTop="10dp"
					android:layout_marginLeft="20dp"
					android:orientation="vertical">
				<TextView
						android:layout_width="match_parent"
						android:layout_height="30dp"
						android:text="账号"
						android:textColor="@color/grey"
						android:gravity="left"
						android:textSize="18dp"
				/>
				<LinearLayout
						android:layout_width="250dp"
						android:layout_height="40dp"
						android:orientation="horizontal">
					<ImageView
							android:layout_width="50dp"
							android:layout_height="50dp"/>
					<EditText
							android:layout_width="match_parent"
							android:layout_height="match_parent"
					/>
				</LinearLayout>
				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="40dp">
					<TextView
							android:layout_width="100dp"
							android:layout_height="match_parent"
							android:text="密码"
							android:textColor="@color/grey"
							android:gravity="left"
							android:textSize="18dp"
							android:layout_marginTop="10dp"
					/>
					<TextView
							android:layout_width="200dp"
							android:layout_height="match_parent"
							android:layout_marginTop="15dp"
							android:text="密码错误, 请重新输入！"
							android:textSize="14dp"
							android:gravity="right"
							android:textColor="@color/red"
							android:visibility="invisible"/>
				</LinearLayout>
				<LinearLayout
						android:layout_width="250dp"
						android:layout_height="50dp"
						android:orientation="horizontal">
					<ImageView
							android:layout_width="50dp"
							android:layout_height="50dp"/>
					<EditText
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:inputType="textPassword"
					/>
				</LinearLayout>

			</LinearLayout>
			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="30dp"
					android:layout_marginLeft="20dp"
					android:orientation="horizontal">
				<CheckBox
						android:layout_width="120dp"
						android:layout_height="match_parent"
						android:text="记住密码"
						android:textColor="@color/grey"/>
				<CheckBox
						android:layout_width="120dp"
						android:layout_height="match_parent"
						android:text="自动登录"
						android:textColor="@color/grey"/>
			</LinearLayout>
			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="40dp"
					android:layout_marginTop="70dp"
					android:gravity="center"
					>
				<Button
						android:layout_width="280dp"
						android:layout_height="match_parent"
						android:background="@drawable/button_frame_shape"
						android:text="登录"
						android:textColor="#DFDCDC"
						android:textSize="20dp"/>
			</LinearLayout>
		</LinearLayout>
	</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>