<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/top">
            <Button
                    android:id="@+id/editUserReturnButton"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="-5dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/return_button"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="用户编辑"
                    android:textColor="#f5f5f5"
                    android:textSize="24dp"
                    android:layout_marginLeft="-30dp"
                    android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="520dp"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp">
                <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/user_name"/>
                <TextView
                        android:id="@+id/editUserName"
                        android:layout_width="280dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:textSize="14dp"
                        android:text="admin"
                        android:textColor="@color/black"
                        android:gravity="center|left"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp">
                <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/account"/>
                <TextView
                        android:id="@+id/editUserAccount"
                        android:layout_width="280dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:textSize="14dp"
                        android:text="admin"
                        android:textColor="@color/black"
                        android:gravity="center|left"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp">
                <ImageView
                        android:layout_marginTop="5dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/input_admin"/>
                <Spinner
                        android:layout_width="280dp"
                        android:layout_height="match_parent"
                        android:entries="@array/type"
                        android:popupBackground="#ffffff"
                        android:background="#ffffff"
                        android:id="@+id/editUserType"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp">
                <TextView
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:textSize="14dp"
                        android:text="初始密码:"
                        android:textColor="@color/black"
                        android:gravity="center|left"/>
                <TextView
                        android:id="@+id/initialPassword"
                        android:layout_width="280dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:textSize="14dp"
                        android:text="123456"
                        android:textColor="@color/black"
                        android:gravity="center|left"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp">
                <ImageView
                        android:layout_marginTop="5dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/password2"/>
                <EditText
                        android:id="@+id/editPassword"
                        android:layout_width="280dp"
                        android:layout_height="match_parent"
                        android:textSize="14dp"
                        android:hint="请输入密码"
                        android:textColorHint="@color/black"
                        android:textColor="@color/black"
                        android:inputType="textPassword"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp">
                <ImageView
                        android:layout_marginTop="5dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/password3" />
                <EditText
                        android:id="@+id/editPasswordAgain"
                        android:layout_width="280dp"
                        android:layout_height="match_parent"
                        android:textSize="14dp"
                        android:hint="请再一次输入密码"
                        android:textColorHint="@color/black"
                        android:textColor="@color/black"
                        android:inputType="textPassword"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout 
                android:layout_width="match_parent" 
                android:layout_height="50dp">
            <Button
                    android:id="@+id/editUserConfirm"
                    android:layout_width="340dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button_frame_shape"
                    android:layout_marginLeft="10dp"
                    android:text="确认"
                    android:textColor="#C5C5C8"
                    android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>