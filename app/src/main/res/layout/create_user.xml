<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            android:background="@color/background">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/top">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="用户创建"
                    android:textColor="#D5D5D6"
                    android:textSize="24dp"
                    android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="520dp"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/create_user_radius"
                    android:layout_marginLeft="10dp">
                <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent" />
                <EditText
                        android:layout_width="280dp"
                        android:layout_height="match_parent"
                        android:textSize="14dp"
                        android:hint="请输入用户名"
                        android:textColorHint="@color/font"
                        android:textColor="#DFDCDC"
                        android:background="@color/text"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/create_user_radius"
                    android:layout_marginLeft="10dp">
                <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent" />
                <EditText
                        android:layout_width="280dp"
                        android:layout_height="match_parent"
                        android:textSize="14dp"
                        android:hint="请输入账号"
                        android:textColorHint="@color/font"
                        android:textColor="#DFDCDC"
                        android:background="@color/text" />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/create_user_radius"
                    android:layout_marginLeft="10dp">
                <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent" />
                <Spinner
                        android:layout_width="280dp"
                        android:layout_height="match_parent"
                        android:entries="@array/type"
                        android:popupBackground="#353434"
                        android:background="#353434"
                        />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/create_user_radius"
                    android:layout_marginLeft="10dp">
                <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent" />
                <EditText
                        android:layout_width="280dp"
                        android:layout_height="match_parent"
                        android:textSize="14dp"
                        android:hint="请输入密码"
                        android:textColorHint="@color/font"
                        android:textColor="#DFDCDC"
                        android:background="@color/text"
                        android:inputType="textPassword"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/create_user_radius"
                    android:layout_marginLeft="10dp">
                <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent" />
                <EditText
                        android:layout_width="280dp"
                        android:layout_height="match_parent"
                        android:textSize="14dp"
                        android:hint="请再一次输入密码"
                        android:textColorHint="@color/font"
                        android:textColor="#7D848A"
                        android:background="@color/text"
                        android:inputType="textPassword"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout 
                android:layout_width="match_parent" 
                android:layout_height="50dp">
            <Button
                    android:layout_width="340dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button_frame_shape"
                    android:layout_marginLeft="10dp"
                    android:text="确认"
                    android:textColor="#C5C5C8"
                    android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>